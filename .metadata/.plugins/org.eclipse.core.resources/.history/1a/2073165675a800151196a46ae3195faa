#include "Define_Header.h"

/************************************************************ Function Define *****************************************************************/
void LED(void);
/**********************************************************************************************************************************************/

/*********************************************************** 		Variables		***********************************************************/
Uint16 Flag_Display = 0;
Uint16 Flag_Flicker = 0;
/**********************************************************************************************************************************************/
/*********************************************************** 	Constant Define		***********************************************************/
#define LED_TIME				2000										// 100[ms] = 100[us] x 1000
/**********************************************************************************************************************************************/

/*********************************************************** 		Codes			***********************************************************/
void LED(void)
{
	static Uint16 LED_loop_cnt = 0;

	if (LED_loop_cnt++ >= LED_TIME)
	{
		switch (Flag_Flicker)
		{
		case 0:
			Flag_Display ++;
			Flag_Flicker++;
			break;
		case 1:
			Flag_Flicker++;
			break;
		case 2:
			Flag_Flicker++;
			break;
		case 3:
			Flag_Flicker = 0;
			break;
		default:
			Flag_Flicker = 0;
			break;
		}

		LED_loop_cnt = 0;
	}
	return;
}
/**********************************************************************************************************************************************/
